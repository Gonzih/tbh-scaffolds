%h1 <%= plural_table_name.capitalize %>

%table.scaffold.common-table.zebra-stripped
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.human_name %>
<% end -%>
      %th
      %th
      %th

  %tbody
    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
      %tr
<% for attribute in attributes -%>
        %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
        %td= button_to 'Show', <%= singular_table_name %>, :method => :get, :class => 'btn'
        %td= button_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :method => :get, :class => 'btn primary'
        %td= button_to 'Destroy', <%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger'

%br

= button_to 'New <%= human_name %>', new_<%= singular_table_name %>_path, :method => :get, :class => 'btn primary'
